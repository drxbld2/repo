<addons>
    
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.drxwizard" name="Durex Wizard" version="6.0" provider-name="Durex">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Durex Wizard</summary>
    <description lang="en">Durex Wizard allows you to get access to the latest Durex Custom Builds.</description>
    <platform>all</platform>
  </extension>
</addon>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.drxrepopub" name="[COLOR gold]Durex Build Repo[/COLOR]" version="2.0" provider-name="Durex">
	<extension point="xbmc.addon.repository" name="Durex Build Repo">
		<info compressed="false">https://raw.githubusercontent.com/drxbld/repo/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/drxbld/repo/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/drxbld/repo/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Durex Add-on Repository</summary>
		<description>Kodi Repository for Durex Build</description>
		<platform>all</platform>
	</extension>
</addon>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.durex.notifications" name="Notifications" version="6.6" provider-name="Durex">
    <requires>
        <import addon="xbmc.python" version="2.20.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.service" library="default.py" start="startup" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Notifications</summary>
        <description lang="en">Receive Important Durex Build Notifications. Unsubscribe within Add-on Settings.</description>
        <language></language>
        <platform>all</platform>
        <website>https://www.drxbld.com/</website>
        <source></source>
        <forum></forum>
    </extension>
</addon>

<?xml version="1.1" encoding="UTF-8" standalone="yes"?>
